@model IEnumerable<Clinic.Models.AppointmentDone>

@{
    Layout = "_Layout";
}

<h3>Архив обработанных заказов</h3>
<table class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>
                ID Пациента
            </th>
            <th>
                Имя пациента
            </th>
            <th>
                Врач
            </th>
            <th>
                Диагноз
            </th>
            <th class="text-right">
                Цена
            </th>
            <th>
                Дата и время обработки заказа
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiagnosName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalSum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentPlaced)
                </td>

            </tr>
        }
    </tbody>
</table>


