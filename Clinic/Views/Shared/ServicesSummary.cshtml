@model Service
    <style>
        .gallery5 {
            overflow: hidden;
            width: 320px;
            height: 250px;
            align-content: center;
            text-align: center;
        }

            .gallery5 .ramka {
                float: none;
                margin-right: 5px;
                margin-bottom: 5px;
                text-align: center;
            }

            .gallery5 img {
                width: 320px;
                height: 250px;
                object-fit: cover;       
            }
    </style>
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <div class="gallery5">
            <img class="ramka" src="@Model.ImageThumbnailUrl" alt="" />
            </div>
            <div class="caption">
                <h3 class="pull-right">@Model.Price.ToString() BYN</h3>
                <h3>
                    <a asp-controller="Service" asp-action="Details" asp-route-serviceId="@Model.ServiceId">@Model.Name</a>
                </h3>
                <p>@Model.Category.Name: @Model.ShortDescription</p>
                <p>Врач: @Model.DoctorName</p>
            </div>
            <div class="addToCart text-right">
                <p class="button ">
                    <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-serviceId="@Model.ServiceId">
                        В корзину
                    </a>
                </p>
            </div>
        </div>
    </div>